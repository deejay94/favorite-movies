    <div class="getfave" data-id="{{favorite_movie.id}}">
      <table class="fave-movie">
        <tbody>
          <tr>
            <th>Id</th>
            <th>Title </th>
            <th>Genre </th>
            <th>Comment </th>
          </tr>

        <tr>
          <td>{{favorite_movie.id}}</td>
          <td>{{favorite_movie.title}}</td>
          <td>{{favorite_movie.genre}}</td>
          <td>{{favorite_movie.comment}}</td>
          <td>
          <button class= "remove-fave">Remove Movie From List</button>
          <button class="delete-fave">Delete a movie</button>
        </td>
        </tr>
      </tbody>
      </table>
  </div>
